#!/bin/bash
#init="rinit"
Init=$(cat .init.conf)
while [ true ]; do
    #read -p "Choose: rinit or neoinit:: " sysVInit
    if [ $Init == "rinit" ]; then
        ./rootfs/usr/src/rinit/rinit-main
    elif [ $Init == "neoinit" ]; then
        ./rootfs/usr/src/neoinit/init2
        ./rootfs/usr/src/neoinit/neoinit_service_start
    else
        echo "Nucleo::WARNING::Init not found!"
    fi
done